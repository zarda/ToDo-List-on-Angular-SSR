rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'lists' collection
    match /lists/{listId} {
      // A user can read a list if they are the owner or if it's shared with them.
      allow read: if request.auth != null && 
                    (resource.data.ownerUid == request.auth.uid || request.auth.token.email in resource.data.sharedWith);

      // A user can create a list if they are logged in and they are the owner of the new list.
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;

      // Only the owner can update (e.g., rename, share) or delete the list.
      allow update, delete: if request.auth != null && resource.data.ownerUid == request.auth.uid;

      // Rules for the 'todos' subcollection
      match /todos/{todoId} {
        // A user can perform any action on a to-do if they have access to the parent list.
        allow read, create, update, delete: if request.auth != null &&
                           (get(/databases/$(database)/documents/lists/$(listId)).data.ownerUid == request.auth.uid ||
                            request.auth.token.email in get(/databases/$(database)/documents/lists/$(listId)).data.sharedWith);
      }
    }
  }
}
