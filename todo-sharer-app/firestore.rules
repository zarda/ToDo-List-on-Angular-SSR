rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lists can be read, updated, or deleted only by the user who owns them.
    match /lists/{listId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      
      // Anyone authenticated can create a list, as long as they set themselves as the owner.
      allow create: if request.auth != null && request.resource.data.ownerUid == request.auth.uid;

      // Todos can be managed only by the user who owns the parent list.
      match /todos/{todoId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/lists/$(listId)).data.ownerUid == request.auth.uid;
      }
    }
  }
}
